<%- include("includes/nav") %>
<%- include("includes/head") %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead adicionar">Faça login ou crie sua conta abaixo</p>

            <%- include("includes/messages") %>

            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>

                    <p>Preencha o formulário abaixo</p>


                    <form action="/login/register" method="POST" class="form-cadastro">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group my-3">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div hidden class="alert alert-danger p-2" id="emailError">
                        </div>
                        <div class="form-group my-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                          <div hidden class="alert alert-danger p-2" id="passwordError">
                          </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>

                </div>

                <div class="col-lg">
                    <h4>Faça seu login</h4>

                    <p>Se você já tem uma conta, faça login abaixo:</p>

                    <form action="/login/login" method="POST" class="form-login">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group my-3">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div hidden class="alert alert-danger p-2" id="emailError">
                        </div>
                        <div class="form-group my-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <div hidden class="alert alert-danger p-2" id="passwordError">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>
            </div>
            
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>
<%- include("includes/footer") %>